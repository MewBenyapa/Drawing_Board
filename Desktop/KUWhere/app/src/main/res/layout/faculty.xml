<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Select Faculty"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/engineer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engineer"
        android:fontFamily="casual"
        android:background="@color/Bisque"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/veterinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veterinary"
        android:fontFamily="casual"
        android:background="@color/Bisque"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/engineer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/architecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Architecture"
        android:fontFamily="casual"
        android:background="@color/Bisque"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/veterinary"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>